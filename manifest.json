{
    "manifest_version": 3,
    "name": "Smart Document Organizer AI",
    "version": "2.0",
    "description": "AI-powered document organization with smart features and team collaboration",
    "permissions": [
      "storage",
      "activeTab",
      "tabs",
      "downloads",
      "contextMenus",
      "clipboard",
      "bookmarks",
      "identity",
      "alarms"
    ],
    "host_permissions": [
      "https://*/*"
    ],
    "action": {
      "default_popup": "src/popup/popup.html"
    },
    "background": {
      "service_worker": "src/background/background.js"
    },
    "icons": {
      "48": "assets/icons/action-icons/icon48.png",
      "128": "assets/icons/action-icons/icon128.png"
    }
  }
  